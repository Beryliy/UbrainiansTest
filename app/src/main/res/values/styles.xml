<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--//General//-->
    <style name="InputField">
        <item name="android:layout_width">@dimen/scalable_width</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:layout_marginStart">@dimen/input_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/input_margin_end</item>
    </style>

    <!--//MainActivity//-->
    <style name="NavigationFragment">
        <item name="android:layout_width">@dimen/scalable_width</item>
        <item name="android:layout_height">@dimen/scalable_height</item>
    </style>

    <style name="Tabs">
        <item name="android:layout_width">@dimen/scalable_width</item>
        <item name="android:layout_height">@dimen/tabs_height</item>
    </style>

    <!--//ExtractFragment//-->
    <style name="FindButton">
        <item name="android:layout_width">@dimen/find_btn_width</item>
        <item name="android:layout_height">@dimen/find_btn_height</item>
        <item name="android:layout_marginTop">@dimen/find_btn_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/find_btn_margin_end</item>
    </style>

    <style name="ImageTable">
        <item name="android:layout_width">@dimen/scalable_width</item>
        <item name="android:layout_height">@dimen/scalable_height</item>
    </style>

    <style name="ImageTableItem">
        <item name="android:layout_width">@dimen/table_item_width</item>
        <item name="android:layout_height">@dimen/table_item_height</item>
        <item name="android:layout_marginStart">@dimen/table_item_margin_start</item>
        <item name="android:layout_marginTop">@dimen/table_item_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/table_item_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/table_item_margin_bottom</item>
    </style>

    <!--//AutocompliteFragment//-->
    <style name="SuggestsList">
        <item name="android:layout_width">@dimen/scalable_width</item>
        <item name="android:layout_height">@dimen/scalable_height</item>
    </style>

    <style name="SuggestListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/suggest_list_item_height</item>
    </style>

    <style name="Suggest">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/suggest_list_item_padding_start</item>
    </style>

</resources>
